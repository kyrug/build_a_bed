<h2>New Donation Request</h2>
<% form_for @donation_request do |r| %>
  <%= r.error_messages %>
  <table>
    <tr>
      <td><%= r.label :name %></td>
      <td><%= r.text_field :name %></td>
    </tr>
    <tr>
      <td><%= r.label :description %></td>
      <td><%= r.text_area :description %></td>
    </tr>
    <tr>
      <td><%= r.label :quantity %></td>
      <td><%= r.text_field :quantity %></td>
    </tr>
  </table>
  <%= submit_tag 'Create' %>
<% end %>

<hr />

<h1>All Donation Requests</h1>
<table id="donreqtable">
  <tr>
    <th>Name</th>
    <th>Desc.</th>
    <th>Need</th>
    <th>Avail.</th>
    <th>Admin Actions</th>
  </tr>
<% for donation_request in @donation_requests %>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%= donation_request.name %></td>
    <td><%= donation_request.description %></td>
    <td> <%= donation_request.quantity %></td>
    <td><%= donation_request.quantity_donated %></td>
    <td>
      <%= link_to 'edit', edit_donation_request_path(donation_request) %>
      <%= link_to 'destroy',
        donation_request_path(donation_request),
        :confirm => 'Are you sure?',
        :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

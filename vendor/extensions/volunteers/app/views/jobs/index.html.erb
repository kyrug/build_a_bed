<h2>New Job</h2>
<% form_for @job do |j| %>
  <%= j.error_messages %>
  <table>
    <tr>
      <td><%= j.label :name %></td>
      <td><%= j.text_field :name %></td>
    </tr>
    <tr>
      <td><%= j.label :description %></td>
      <td><%= j.text_area :description %></td>
    </tr>
    <tr>
      <td><%= j.label :quantity %></td>
      <td><%= j.text_field :quantity %></td>
    </tr>
  </table>
  <%= submit_tag 'Create' %>
<% end %>

<hr />

<h1>All Jobs</h1>
<table id="jobtable">
  <tr>
    <th>Name</th>
    <th>Desc.</th>
    <th>Need</th>
    <th>Avail.</th>
    <th>Admin Actions</th>
  </tr>
<% for job in @jobs %>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%= job.name %></td>
    <td><%= job.description %></td>
    <td> <%= job.quantity %></td>
    <td><%= job.volunteers.count %></td>
    <td>
      <%= link_to 'edit', edit_job_path(job) %>
      <%= link_to 'destroy',
        job_path(job),
        :confirm => 'Are you sure?',
        :method => :delete %>
      </td>
  </tr>
<% end %>
</table>

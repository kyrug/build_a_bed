<h1>All Bed Requests</h1>
<table id="dontable">
  <thead>
    <tr>
      <th scope="col">Recipient</th>
      <th scope="col">Referrer</th>
      <th scope="col">Phone</th>
      <th scope="col">Email</th>
      <th scope="col">Admin Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for br in @bed_requests %>
      <tr class="<%= cycle("odd", "even") %>">
        <td>
          <%= link_to "#{br.recipient_first_name} #{br.recipient_last_name}",
            bed_request_path(br) %>
        </td>
        <td><%= br.referral_first_name %> <%= br.referral_last_name %></td>
        <td> <%= br.referral_phone %></td>
        <td> <%= mail_to br.referral_email %></td>
        <td>
          <%= link_to 'edit', edit_bed_request_path(br) %>
          <%= link_to 'destroy', bed_request_path(br), :confirm => 'Are you sure?', :method => :delete  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

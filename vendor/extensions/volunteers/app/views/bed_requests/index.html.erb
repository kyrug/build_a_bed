<h1>All Bed Requests</h1>
<table id="dontable">
  <thead>
    <tr>
      <th scope="col">Recipient</th>
      <th scope="col">Referrer</th>
      <th scope="col">Phone</th>
      <th scope="col">Email</th>
      <th scope="col">Admin Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for br in @bed_requests %>
      <tr class="<%= cycle("odd", "even") %>">
        <td><%= br.recipient_first_name %> <%= br.recipient_last_name %></td>
        <td><%= br.referral_first_name %> <%= br.referral_last_name %></td>
        <td> <%= br.referral_phone %></td>
        <td> <%= mail_to br.referral_email %></td>
        <td>
          <%= link_to('edit', :action => 'edit', :id => br.id) %>
          <%= link_to('show', :action => 'show', :id => br.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>New Volunteer</h1>

<% form_for @volunteer do |v| %>
  <%= v.error_messages %>
  <table>
    <tr>
      <td><%= v.label :first_name %></td>
      <td><%= v.text_field :first_name %></td>
    </tr>
    <tr>
      <td><%= v.label :last_name %></td> 
      <td><%= v.text_field :last_name %></td>
    </tr>
    <tr>
      <td><%= v.label :phone %></td>
      <td><%= v.text_field :phone %></td>
    </tr>
    <tr>
      <td><%= v.label :email %></td>
      <td><%= v.text_field :email %></td>
    </tr>
    <tr>
      <td><%= v.label :job %></td>
      <td>
        <%= collection_select(
          :volunteer, :job_id, Job.all, :id, :name, {:prompt => true}
        ) %>
      </td>
    </tr>
  </table>
  <%= submit_tag 'Create' %>
<% end %>
<hr />
<h1>All Volunteers</h1>
<table id="voltable">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Phone</th>
      <th scope="col">Email</th>
      <th scope="col">Job</th>
      <th scope="col">Admin Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for volunteer in @volunteers %>
      <tr class="<%= cycle("odd", "even") %>">
        <td><%= volunteer.first_name %> <%= volunteer.last_name %></td>
        <td> <%= volunteer.phone %></td>
        <td> <%= mail_to volunteer.email %></td>
        <td><%= volunteer.job.name %></td>
        <td>
          <%= link_to 'edit', edit_volunteer_path(volunteer) %>
          <%= link_to "destroy", volunteer_path(volunteer), :confirm => "Are you sure?", :method => :delete %>
      </tr>
    <% end %>
  </tbody>
</table>
